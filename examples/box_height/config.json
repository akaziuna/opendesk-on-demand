{
  "parameters": {
    "height": {
      "units": "mm",
      "value": {
        "type": "numeric::range",
        "max": 100,
        "min": 10
      },
      "initial_value": 80
    }
  },
  "transformations": {
    "extend_tops": {
      "match": {
        "layers": ["default", "special"],
        "bounds": {
          "x": [5, 50],
          "y": [5, 50],
          "z": [5, 50]
        }
      },
      "properties": {
        "z": {
          "use": "add",
          "args": ["@", "$height"]
        }
      }
    }
  }
}
